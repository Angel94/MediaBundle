<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_media.subscriber.doctrine_file_stream.class">Symfony\Cmf\Bundle\MediaBundle\EventListener\DoctrineFileStreamSubscriber</parameter>
        <parameter key="cmf_media.subscriber.doctrine_image_dimensions.class">Symfony\Cmf\Bundle\MediaBundle\EventListener\DoctrineImageDimensionsSubscriber</parameter>
    </parameters>

    <services>

        <service id="cmf_media.subscriber.doctrine_file_stream" class="%cmf_media.subscriber.doctrine_file_stream.class%">
            <tag name="doctrine_phpcr.event_subscriber" priority="-8" />
        </service>

        <service id="cmf_media.subscriber.doctrine_image_dimensions" class="%cmf_media.subscriber.doctrine_image_dimensions.class%">
            <tag name="doctrine_phpcr.event_subscriber" />
            <argument>%cmf_media.use_imagine%</argument>
            <argument type="service" id="liip_imagine" />
        </service>

    </services>
</container>
